<%= simple_form_for [@category, @item] do |f| %>
  <%= f.input   :name, label:'Наименование товара' %>
  <%= f.input   :price, label:'Цена' %>
  <%= f.input   :weight, label:'Вес' %>
  <%= f.input   :description, label:'Описание' %>
  <%= f.input   :quantity_item, label:'Количество' %>
  <%= f.input   :picture, label: 'Изображение товара' %>
  <%= f.button  :submit, 'Сохранить товар', class: "btn btn-primary btn-sm" %> или <%= link_to 'вернуться', :back %>
<% end %>

<%= simple_form_for [@category, @item], html: {multipart: true} do |f| %>
  <%= f.input   :name, label:'Наименование товара' %>
  <%= f.input   :price, label:'Цена' %>
  <%= f.input   :stock_price, label:'Цена по акции' %>
  <%= f.input   :weight, label:'Вес' %>
  <%= f.input   :description, label:'Описание' %>
  <%= f.input   :picture, label: 'Изображение товара' %>
  <%= f.button  :submit, 'Сохранить товар', class: "btn btn-primary btn-sm" %> или <span><p class="disp-inl"><%= link_to 'вернуться', :back %></p></span>
<% end %>

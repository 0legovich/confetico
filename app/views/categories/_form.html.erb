<%= simple_form_for @category, html: {multipart: true} do |f| %>
  <%= f.input :product_category, label:'Наименование категории' %>
  <%= f.input :picture, label: 'Изображение категории' %>
  <%= f.button :submit, 'Сохранить', class: "btn btn-primary btn-sm" %> или <span><p class="disp-inl"><%= link_to 'вернуться', :back %></p></span>
<% end %>
